<div class="container">
  <div class="row">
    <div class="col-sm-12 text-center">
      <h1>Burgers!</h1>

    <img src="https://img.delicious.com.au/bMm1SsuG/del/2015/11/solid-gold-burger-23751-3.jpg" class="img-fluid rounded" alt="Responsive image">
    </div>
    <div class="col-sm-6 bg-info rounded-lg mt-4">
      

      <h3>Burgers to eaten!</h3>

      <ul>
        {{#each cats}}
        {{#unless sleepy}}
        {{> cats/cat-block sleep=true}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col-sm-6 bg-secondary rounded-lg mt-4">


      <h3>Burgers to eat!</h3>

      <ul>
        {{#each cats}}
        {{#if sleepy}}
        {{> cats/cat-block sleep=false}}
        {{/if}}
        {{/each}}
      </ul>
    </div>
    <div class="col-sm-12">


      <h2>Add a Burger</h2>
      <form class="create-form form-row">

        <div class="form-group col-sm-6">
          <label for="ca">Burger Name:</label>
          <input type="text" id="ca" name="name">
          <button class="btn btn-secondary" type="submit">Add Burger</button>
        </div>

        <div class="form-group col-sm-6">
          <label for="sleepy">Sleepy?</label><br>
          <input type="radio" name="sleepy" value="1" checked> Sleepy!<br>
          <input type="radio" name="sleepy" value="0"> Awake
        </div>

        
      </form>
    </div>
  </div>
</div>